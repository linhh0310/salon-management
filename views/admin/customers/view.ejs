<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - LYN Salon</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .customer-detail {
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }
        
        .customer-header {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .customer-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: #e5e7eb;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: #6b7280;
        }
        
        .customer-info {
            flex: 1;
        }
        
        .customer-name {
            font-size: 24px;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 5px;
        }
        
        .customer-email {
            color: #6b7280;
            font-size: 16px;
        }
        
        .customer-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }
        
        .detail-group {
            background: #f9fafb;
            padding: 20px;
            border-radius: 8px;
        }
        
        .detail-label {
            font-weight: 600;
            color: #374151;
            margin-bottom: 8px;
        }
        
        .detail-value {
            color: #1f2937;
            font-size: 16px;
        }
        
        .action-buttons {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        
        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-weight: 500;
        }
        
        .btn-edit {
            background: #f59e0b;
            color: white;
        }
        
        .btn-back {
            background: #6b7280;
            color: white;
        }
        
        .btn-delete {
            background: #dc2626;
            color: white;
        }
    </style>
</head>
<body>
    <div class="admin-layout">
        <!-- Sidebar -->
        <%- include('../partials/sidebar') %>
        
        <!-- Main Content -->
        <div class="admin-main">
            <!-- Top Navigation -->
            <div class="admin-header">
                <div class="header-left">
                    <button class="hamburger-menu" onclick="toggleSidebar()">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="header-title">Chi tiết Khách hàng</div>
                </div>
                <div class="header-right">
                    <a href="/admin/customers" class="header-link">
                        <i class="fas fa-arrow-left"></i>
                        Quay lại
                    </a>
                </div>
            </div>

            <!-- Content Area -->
            <div class="admin-content">
                <div class="content-header">
                    <h1 class="content-title">Chi tiết Khách hàng</h1>
                    <p class="content-subtitle">Thông tin chi tiết về khách hàng</p>
                </div>
                
                <div class="customer-detail">
                    <div class="customer-header">
                        <div class="customer-avatar">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="customer-info">
                            <div class="customer-name"><%= customer.name %></div>
                            <div class="customer-email"><%= customer.email %></div>
                        </div>
                    </div>
                    
                    <div class="customer-details">
                        <div class="detail-group">
                            <div class="detail-label">Email</div>
                            <div class="detail-value"><%= customer.email %></div>
                        </div>
                        
                        <div class="detail-group">
                            <div class="detail-label">Số điện thoại</div>
                            <div class="detail-value"><%= customer.phone || 'Chưa có' %></div>
                        </div>
                        
                        <div class="detail-group">
                            <div class="detail-label">Địa chỉ</div>
                            <div class="detail-value"><%= customer.address || 'Chưa có địa chỉ' %></div>
                        </div>
                        
                        <div class="detail-group">
                            <div class="detail-label">Ngày tham gia</div>
                            <div class="detail-value"><%= new Date(customer.created_at).toLocaleDateString('vi-VN') %></div>
                        </div>
                        
                        <div class="detail-group">
                            <div class="detail-label">Trạng thái</div>
                            <div class="detail-value">
                                <span class="status-badge status-active">Hoạt động</span>
                            </div>
                        </div>
                        
                        <div class="detail-group">
                            <div class="detail-label">Số đơn hàng</div>
                            <div class="detail-value">0 đơn</div>
                        </div>
                    </div>
                    
                    <div class="action-buttons">
                        <a href="/admin/customers/<%= customer.id %>/edit" class="btn btn-edit">
                            <i class="fas fa-edit"></i>
                            Sửa thông tin
                        </a>
                        <a href="/admin/customers" class="btn btn-back">
                            <i class="fas fa-arrow-left"></i>
                            Quay lại
                        </a>
                        <button class="btn btn-delete" onclick="deleteCustomer(<%= customer.id %>)">
                            <i class="fas fa-trash"></i>
                            Xóa khách hàng
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.querySelector('.admin-sidebar');
            sidebar.classList.toggle('open');
        }
        
        function deleteCustomer(id) {
            if (confirm('Bạn có chắc muốn xóa khách hàng này?')) {
                fetch(`/admin/customers/${id}/delete`, {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Xóa khách hàng thành công!');
                        window.location.href = '/admin/customers';
                    } else {
                        alert('Có lỗi xảy ra: ' + data.message);
                    }
                });
            }
        }
    </script>
</body>
</html>


