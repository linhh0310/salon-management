                        <i class="fas fa-chevron-right menu-item-arrow"></i>
                    </a>
                    <a href="/admin/reviews" class="menu-item">
                        <div class="menu-item-left">
                            <i class="fas fa-globe"></i>
                            <span>Nhận xét khách hàng</span>
                        </div>
                        <i class="fas fa-chevron-right menu-item-arrow"></i>
                    </a>
                    <a href="/admin/support" class="menu-item">
                        <div class="menu-item-left">
                            <i class="fas fa-headset"></i>
                            <span>Hỗ trợ trực tuyến</span>
                        </div>
                        <i class="fas fa-chevron-right menu-item-arrow"></i>
                    </a>
                    <a href="/admin/contact" class="menu-item">
                        <div class="menu-item-left">
                            <i class="fas fa-phone"></i>
                            <span>Liên hệ</span>
                        </div>
                        <i class="fas fa-chevron-right menu-item-arrow"></i>
                    </a>
                    <a href="/admin/members" class="menu-item">
                        <div class="menu-item-left">
                            <i class="fas fa-users"></i>
                            <span>Thành viên</span>
                        </div>
                        <i class="fas fa-chevron-right menu-item-arrow"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="admin-main">
            <!-- Top Navigation -->
            <div class="admin-header">
                <div class="header-left">
                    <button class="hamburger-menu" onclick="toggleSidebar()">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="header-title">Quản lý Danh mục</div>
                </div>
                <div class="header-right">
                    <a href="/" class="header-link">
                        <i class="fas fa-eye"></i>
                        Xem website
                    </a>
                    <div class="admin-user">
                        <i class="fas fa-user"></i>
                        <span>Admin</span>
                    </div>
                </div>
            </div>

            <!-- Content Area -->
            <div class="admin-content">
                <!-- Breadcrumbs -->
                <div class="breadcrumbs" style="margin-bottom: 20px; color: #7f8c8d;">
                    <a href="/admin" style="color: #3498db; text-decoration: none;">Trang chủ</a>
                    <span style="margin: 0 10px;">></span>
                    <span>Danh mục</span>
                </div>

                <!-- Action Bar -->
                <div class="action-bar">
                    <div class="action-left">
                        <select class="action-dropdown" id="bulkAction">
                            <option value="">Tác vụ</option>
                            <option value="delete">Xóa đã chọn</option>
                            <option value="show">Hiển thị đã chọn</option>
                            <option value="hide">Ẩn đã chọn</option>
                        </select>
                        
                        <div class="search-box">
                            <input type="text" class="search-input" id="searchInput" placeholder="Tìm kiếm...">
                            <select class="search-by" id="searchBy">
                                <option value="name">Tên danh mục</option>
                                <option value="module">Module</option>
                            </select>
                        </div>
                        
                        <select class="display-count" id="displayCount">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                    
                    <a href="/admin/categories/add" class="btn-add">
                        <i class="fas fa-plus"></i> + Thêm mới
                    </a>
                </div>

                <!-- Data Table -->
                <div class="data-table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="width: 50px;">
                                    <input type="checkbox" id="selectAll" class="checkbox">
                                </th>
                                <th>STT</th>
                                <th>Danh mục</th>
                                <th style="width: 100px;">Hình ảnh</th>
                                <th style="width: 120px;">Module</th>
                                <th style="width: 100px;">Trang chủ</th>
                                <th style="width: 100px;">Danh mục</th>
                                <th style="width: 100px;">Hiển thị</th>
                                <th style="width: 120px;">Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (categories && categories.length > 0) { %>
                                <% categories.forEach((category, index) => { %>
                                    <tr>
                                        <td>
                                            <input type="checkbox" class="checkbox category-checkbox" value="<%= category.id %>">
                                        </td>
                                        <td><%= index + 1 %></td>
                                        <td class="category-name">
                                            <% if (category.parent_id > 0) { %>
                                                <div class="sub-category"><%= category.name %></div>
                                            <% } else { %>
                                                <%= category.name %>
                                            <% } %>
                                        </td>
                                        <td></td>
                                        <td><span class="module-badge"><%= category.module %></span></td>
                                        <td>
                                            <label class="status-toggle">
                                                <input type="checkbox" class="show-home-toggle" 
                                                       data-id="<%= category.id %>" 
                                                       <%= category.show_home ? 'checked' : '' %>>
                                                <span class="slider"></span>
                                            </label>
                                        </td>
                                        <td>
                                            <label class="status-toggle">
                                                <input type="checkbox" class="show-menu-toggle" 
                                                       data-id="<%= category.id %>" 
                                                       <%= category.show_menu ? 'checked' : '' %>>
                                                <span class="slider"></span>
                                            </label>
                                        </td>
                                        <td>
                                            <label class="status-toggle">
                                                <input type="checkbox" class="is-active-toggle" 
                                                       data-id="<%= category.id %>" 
                                                       <%= category.is_active ? 'checked' : '' %>>
                                                <span class="slider"></span>
                                            </label>
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <a href="/admin/categories/<%= category.id %>/edit" class="btn-edit" title="Sửa">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button class="btn-delete" title="Xóa" onclick="deleteCategory(<%= category.id %>, '<%= category.name %>')">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="9" style="text-align: center; padding: 40px; color: #7f8c8d;">
                                        Không có danh mục nào
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

                <!-- Note -->
                <div class="note" style="background: #fff3cd; border: 1px solid #ffeaa7; color: #856404; padding: 15px; border-radius: 4px; margin-top: 20px; font-size: 14px;">
                    <i class="fas fa-info-circle"></i>
                    Nếu không muốn hiển thị Module trên website, quý khách nhấp bỏ dấu tick ở cột Hiển thị.
                </div>
            </div>
        </div>
    </div>

    <script>
        // Toggle sidebar on mobile
        function toggleSidebar() {
            const sidebar = document.querySelector('.admin-sidebar');
            sidebar.classList.toggle('open');
        }

        // Handle select all checkbox
        document.getElementById('selectAll').addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.category-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = this.checked;
            });
        });

        // Handle status toggles
        document.querySelectorAll('.status-toggle input').forEach(toggle => {
            toggle.addEventListener('change', function() {
                const id = this.dataset.id;
                const field = this.classList.contains('show-home-toggle') ? 'show_home' :
                             this.classList.contains('show-menu-toggle') ? 'show_menu' : 'is_active';
                
                fetch(`/admin/categories/${id}/toggle-status`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ field })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        console.log('Status updated successfully');
                    } else {
                        alert('Có lỗi xảy ra: ' + data.message);
                        this.checked = !this.checked; // Revert the toggle
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi cập nhật trạng thái');
                    this.checked = !this.checked; // Revert the toggle
                });
            });
        });

        // Handle delete category
        function deleteCategory(id, name) {
            if (confirm(`Bạn có chắc muốn xóa danh mục: ${name}?`)) {
                fetch(`/admin/categories/${id}/delete`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Có lỗi xảy ra khi xóa danh mục');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi xóa danh mục');
                });
            }
        }

        // Handle bulk actions
        document.getElementById('bulkAction').addEventListener('change', function() {
            const action = this.value;
            if (!action) return;

            const selectedCheckboxes = document.querySelectorAll('.category-checkbox:checked');
            if (selectedCheckboxes.length === 0) {
                alert('Vui lòng chọn ít nhất một danh mục');
                this.value = '';
                return;
            }

            const selectedIds = Array.from(selectedCheckboxes).map(cb => cb.value);
            
            if (action === 'delete') {
                if (confirm(`Bạn có chắc muốn xóa ${selectedIds.length} danh mục đã chọn?`)) {
                    // Implement bulk delete
                    console.log('Bulk delete:', selectedIds);
                }
            } else {
                // Implement other bulk actions
                console.log('Bulk action:', action, selectedIds);
            }

            this.value = '';
        });

        // Handle search
        document.getElementById('searchInput').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const searchBy = document.getElementById('searchBy').value;
            const rows = document.querySelectorAll('tbody tr');

            rows.forEach(row => {
                const categoryName = row.querySelector('.category-name').textContent.toLowerCase();
                const moduleText = row.querySelector('.module-badge')?.textContent.toLowerCase() || '';
                
                let shouldShow = false;
                if (searchBy === 'name') {
                    shouldShow = categoryName.includes(searchTerm);
                } else if (searchBy === 'module') {
                    shouldShow = moduleText.includes(searchTerm);
                }

                row.style.display = shouldShow ? '' : 'none';
            });
        });

        // Add mobile menu button
        if (window.innerWidth <= 768) {
            const header = document.querySelector('.admin-header');
            const toggleBtn = document.createElement('button');
            toggleBtn.innerHTML = '<i class="fas fa-bars"></i>';
