    <script>
        function scrollCarousel(type, direction) {
                    var carousel = document.querySelector('.' + type + '-carousel');
        var scrollAmount = 400;
            carousel.scrollBy({
                left: direction * scrollAmount,
                behavior: 'smooth'
            });
        }

        // Load sản phẩm bán chạy từ API
        async function loadBestSellingProducts() {
            try {
                        var response = await fetch('/products/api/best-selling');
        var data = await response.json();
                
                if (data.success && data.products) {
                    var carousel = document.getElementById('best-selling-carousel');
                    carousel.innerHTML = '';
                    
                    data.products.forEach(function(product, index) {
                        var productCard = document.createElement('div');
                        productCard.className = 'product-card';
                        productCard.innerHTML = 
                            '<div class="product-badge">TOP ' + (index + 1) + '</div>' +
                            '<div class="product-image">' +
                                '<img src="' + product.image_url + '" alt="' + product.name + '" onerror="this.src=\'/images/product1.jpg\'">' +
                            '</div>' +
                            '<div class="product-content">' +
                                '<h4>' + product.name + '</h4>' +
                                '<div class="price">' + product.price.toLocaleString('vi-VN') + ' VNĐ</div>' +
                                '<div style="font-size: 0.9rem; color: #28a745; margin-bottom: 10px;">Đã bán: ' + (product.sales_count || 0) + '</div>' +
                                '<ul class="product-features">' +
                                    (product.features ? product.features.slice(0, 3).map(function(feature) { return '<li>' + feature + '</li>'; }).join('') : '') +
                                '</ul>' +
                                '<div class="product-actions">' +
                                    '<button class="btn-buy-now" onclick="buyNow(' + product.id + ')">Mua ngay</button>' +
                                    '<button class="btn-add-cart" onclick="addToCart(' + product.id + ')">Giỏ hàng</button>' +
                                '</div>' +
                            '</div>';
                        carousel.appendChild(productCard);
                    });
                }
            } catch (error) {
                console.error('Error loading best selling products:', error);
            }
        }

        // Load sản phẩm bán chạy khi trang được tải
        document.addEventListener('DOMContentLoaded', function() {
            loadBestSellingProducts();
        });
        
